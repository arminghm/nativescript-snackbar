{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["es2018", "es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["node_modules", "platforms", "../src/node_modules"],
  "include": ["../src", "**/*"],
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true // disabling for now to use TS 3.7.3 which should be fine with Angular and available in Q1 with NG9 release
  }
}
